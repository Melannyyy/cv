# Contenido del style.css
style_css = """
body {
  margin: 0;
  font-family: 'Segoe UI', sans-serif;
  background: linear-gradient(135deg, #00c6ff, #0072ff);
  color: #fff;
}

.container {
  max-width: 800px;
  margin: 50px auto;
  padding: 30px;
  background: #ffffff20;
  border-radius: 20px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.3);
}

header {
  text-align: center;
  margin-bottom: 40px;
}

h1 {
  font-size: 3em;
  margin: 0;
  color: #ffe600;
}

h2 {
  border-bottom: 2px solid #ffe600;
  padding-bottom: 5px;
}

p, li {
  font-size: 1.1em;
}

a {
  color: #ffe600;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

ul {
  list-style-type: 'üí° ';
  padding-left: 20px;
}

footer {
  text-align: center;
  margin-top: 30px;
  font-size: 0.9em;
  color: #fff;
}
"""

# Guardar los archivos
with open("/mnt/data/cv-github/index.html", "w", encoding="utf-8") as f:
    f.write(index_html)

with open("/mnt/data/cv-github/style.css", "w", encoding="utf-8") as f:
    f.write(style_css)

# Crear el archivo ZIP
zip_path = "/mnt/data/cv-github.zip"
with ZipFile(zip_path, 'w') as zipf:
    zipf.write("/mnt/data/cv-github/index.html", "index.html")
    zipf.write("/mnt/data/cv-github/style.css", "style.css")

zip_path
